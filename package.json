        }
      ],
      "copy": [
        {
          "from": "README.md",
          "to": "README.md"
        },
        {
          "from": "./assets/widget-datacapture-pr.png",
          "to": "assets/widget-datacapture-pr.png"
        }
      ],
      "remotes": {
        "sag-ps-pkg-widget-datacapture": [
          "DataCaptureWidgetModule"
        ]
      }
    },
    "cli": {}
  },
  "browserslist": [
